<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">


	<Button
			android:text="@string/wifi_on"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/buttonWifi" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/buttonData" app:layout_constraintHorizontal_bias="0.501"
			app:layout_constraintVertical_bias="0.856"/>
	<Button
			android:text="@string/mobile_data_on"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/buttonData" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			android:layout_marginBottom="176dp" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_bias="0.502"/>
</android.support.constraint.ConstraintLayout>